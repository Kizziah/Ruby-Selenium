= form_for @squad do |f|
  - if @squad.errors.any?
    #error_explanation
      %h2= "#{pluralize(@squad.errors.count, "error")} prohibited this squad from being saved:"
      %ul
        - @squad.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :points
    = f.number_field :points
  .field
    = f.label :size
    = f.number_field :size
  .actions
    = f.submit 'Save'
